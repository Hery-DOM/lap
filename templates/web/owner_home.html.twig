{% extends 'web/_base.html.twig' %}

{% block title %}{{ title|striptags|raw }}{% endblock %}

{% block description %}{{ description|striptags|raw }}{% endblock %}



{% block content %}

    {# ##################################################################
      #########################  TOP ###############################
      ################################################################### #}

    <section class="owner-home-top">
        <div class="owner-h1">
            <h1>{{ h1|striptags|raw }}</h1>
        </div>
        <div class="owner-sections-container">
            {% for cat in categories %}
                <div class="owner-elm-block">
                    <a href="{{ path('owner_category',{'slug':cat.name,'id':cat.id}) }}">
                        <div class="img-box">
                            <img src="{{ asset('assets/img/owner/') }}{{ cat.picto }}" alt="{{ cat.name }}">
                        </div>
                        <p class="title">{{ cat.name }}</p>
                    </a>


                </div>
            {% endfor %}
        </div>
    </section>

    {# ##################################################################
      #########################  BREADCRUMB ############################
      ################################################################### #}

    <div class="owner-home-breadcrumb">
        <p><a href="{{ path('home') }}">Accueil</a>  / Devenir propri√©taire</p>
    </div>




    {# ##################################################################
      #########################  DESCRIPTION ############################
      ################################################################### #}

    <div class="owner-home-description">
        {{ intro|raw }}
    </div>





{% endblock %}